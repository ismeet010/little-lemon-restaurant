{
  "compilerOptions": {
    "target": "es6",                           // Specify ECMAScript target version
    "module": "es2015",                      // Specify module code generation
    "strict": true,                            // Enable all strict type-checking options
    "esModuleInterop": true,                   // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that casing is consistent in imports
    "allowImportingTsExtensions": true,       // Enable importing of .ts and .tsx extensions
    "moduleResolution": "bundler",             // Use bundler resolution strategy
    "noEmit": true,                            // Disable emitting output files
    "resolveJsonModule": true,
    "jsx": "react-jsx",
  },
  "include": ["src/**/*"],                     // Include all files in the src directory
  "exclude": ["node_modules"]                  // Exclude the node_modules directory
}



